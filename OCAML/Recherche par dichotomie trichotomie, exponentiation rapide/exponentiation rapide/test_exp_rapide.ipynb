   "source": [
    "let rec exp_rapide a n =\n",
    "    if n = 0 then 1\n",
    "    else let b = exp_rapide a (n/2) in\n",
    "    if n mod 2 = 0 then b*b\n",
    "    else a*b*b"
   ]
